---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Rhuel Garza's personal website." />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon-32.png" />
        <meta name="generator" content={Astro.generator} />

        <!-- General Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content="Rhuel Garza's personal website." />
        <meta name="author" content="Rhuel Garza" />
        <link rel="sitemap" href="/sitemap-index.xml" />
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
    .txt-coral {
        background-image: var(--coral-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    .bg-black {
        background-color: var(--rich-black);
    }
    .txt-black {
        color: var(--rich-black);
    }
    .txt-aquamarine {
        color: var(--aquamarine);
    }
    .grad-aquamarine {
        background-image: var(--aquamarine-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
