---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Rhuel Garza's personal website." />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon-32.png" />
        <meta name="generator" content={Astro.generator} />

        <!-- General Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content="Rhuel Garza's personal website." />
        <meta name="author" content="Rhuel Garza" />
        <link rel="sitemap" href="/sitemap-index.xml" />
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Light.woff2") format("woff2");
        font-weight: 300;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Regular-Reduced.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-SemiBold-Reduced.woff2") format("woff2");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "WFVisualSans";
        src: url("/fonts/WFVisualSans-SemiBold.woff2") format("woff2");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
    }
    :root {
        --accent: 58, 234, 58;
        --accent-light: 204, 250, 204;
        --accent-dark: 10, 101, 10;
        --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
        --coral: 239, 132, 87;
        --coral-light: 235, 160, 129;

        --coral-gradient: linear-gradient(45deg, rgb(var(--coral)), rgb(var(--coral-light)) 30%, white 60%);

        --green: 0, 255, 89;
        --aquamarine: 133, 255, 195;
        --aquamarine-light: 181, 247, 215;
        --aquamarine-gradient: linear-gradient(45deg, rgb(var(--aquamarine)), rgb(var(--green)) 30%, white 60%);

        --rich-black: 0, 18, 11;
        --black: #13151a;
    }
    html {
        font-family: "Inter", sans-serif;
        background: var(--black);
        background-size: 224px;
    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
    .txt-coral {
        background-image: var(--coral-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    .bg-black {
        background-color: var(--rich-black);
    }
    .txt-black {
        color: var(--rich-black);
    }
    .txt-aquamarine {
        color: var(--aquamarine);
    }
    .grad-aquamarine {
        background-image: var(--aquamarine-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
