---
import Card from "../components/Card.astro";
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/base.css";
import "../styles/styles.css";

const posts = await Astro.glob("./posts/*.md");
---

<Layout title="Rhuel Garza">
    <main>
        <Navigation />
        <hr class="spacer-nav" />

        <!-- CONTENT -->
        <h1>Hey, I'm <span class="grad-aquamarine">Rhuel</span></h1>
        <p>Welcome to my personal website, here you'll (soon) find my projects and other cool stuff.</p>

        <h2>Posts</h2>

        <ul role="list" class="link-card-grid">
            {
                posts.map((post) => (
                    <Card
                        href={post.url || Astro.url.origin}
                        title={post.frontmatter.title}
                        body={post.frontmatter.description}
                        date={post.frontmatter.pubDate}
                    />
                ))
            }
        </ul>

        <hr class="spacer-footer" />
        <Footer />
    </main>
</Layout>

<style>
    .astro-a {
        position: absolute;
        top: -32px;
        left: 50%;
        transform: translatex(-50%);
        width: 220px;
        height: auto;
        z-index: -1;
    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 2rem;
        padding: 0;
    }
</style>
